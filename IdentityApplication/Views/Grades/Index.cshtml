@model SchoolManagement.ViewModels.ViewModels.GradeVM
@{
    ViewData["Title"] = "Index";
}


<div class="text-center">
    <h1 class="display-4">Grades of @Model.School.Name</h1>
    <p>You can manage grades from this screen.</p>
</div>

<div class="row">
    <div class="col-12">
        &nbsp;
    </div>
</div>

<a asp-action="Create" asp-route-schoolId="@Model.School.Id">Create</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Desc</td>
            <td>Creation Date</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model.Grades)
        {
        <tr>
            <td>@grade.Id</td>
            <td>@grade.Name</td>
            <td>@grade.Desc</td>
            <td>@grade.CreationDate.ToString("MM/dd/yyyy")</td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-controller="Grades"
                   asp-route-gradeId="@grade.Id" asp-route-schoolId="@Model.School.Id">Edit</a>

                <a class="btn btn-danger" asp-action="Delete" asp-controller="Grades"
                   asp-route-gradeId="@grade.Id" asp-route-schoolId="@Model.School.Id"
                   onclick="return confirm('Are you sure you want to delete @grade.Name?')">Delete</a>

                <a class="btn btn-primary" asp-action="Index" asp-controller="Classes"
                   asp-route-gradeId="@grade.Id" asp-route-schoolId="@Model.School.Id">Classes</a>
            </td>
        </tr>

        }
    </tbody>
</table> 