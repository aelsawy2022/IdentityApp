@model SchoolManagement.Models.Models.ViewModels.GradeViewModel

@{
    ViewData["Title"] = "Create";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Create Grade for @Model.School.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grade.School.Id" value="@Model.School.Id"/>
            <div class="form-group">
                <label asp-for="Grade.Name" class="control-label"></label>
                <input asp-for="Grade.Name" class="form-control" />
                <span asp-validation-for="Grade.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.Desc" class="control-label"></label>
                <input asp-for="Grade.Desc" class="form-control" />
                <span asp-validation-for="Grade.Desc" class="text-danger"></span>
            </div>
