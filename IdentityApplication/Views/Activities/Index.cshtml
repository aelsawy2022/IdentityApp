@model IEnumerable<IdentityApplication.Data.Entities.Activity>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Activities</h1>
    <p>You can manage activities from this screen.</p>
</div>

<div class="row">
    <div class="col-12">
        &nbsp;
    </div>
</div>

<a asp-action="Create">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>School</td>
            <td>Creation Date</td>
            <td>Active</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Id</td>
                <td>@activity.Name</td>
                <td>@activity.School?.Name</td>
                <td>@activity.CreationDate.ToString("MM/dd/yyyy")</td>
                <td>
                    @{
                        var url = Url.Action("ActivateActivity", "Activities", new { activityId = activity.Id }, null);
                    }
                    <div class="form-check form-switch">
                        @Html.CheckBoxFor(m => activity.Active, new { @class = "form-check-input", @id = "flexSwitchCheckDefault", onclick = "window.location = '" + url + "'" })
                        <label class="form-check-label" for="flexSwitchCheckDefault"></label>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table> 