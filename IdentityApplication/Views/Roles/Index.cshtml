@model IEnumerable<SchoolManagement.Persistance.Data.Entities.Role>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Roles</h1>
    <p>You can manage roles from this screen.</p>
</div>

<div class="row">
    <div class="col-12">
        &nbsp;
    </div>
</div>

<a asp-action="Create">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-controller="Roles"
                   asp-route-roleId="@role.Id">Edit</a>

                <a class="btn btn-danger" asp-action="Delete" asp-controller="Roles"
                   asp-route-roleId="@role.Id"
                   onclick="return confirm('Are you sure you want to delete @role.Name?')">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table> 