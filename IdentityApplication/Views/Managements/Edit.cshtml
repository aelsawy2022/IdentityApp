@model IdentityApplication.Models.ViewModels.ManagementViewModel

@{
    ViewData["Title"] = "Edit";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Edit Management</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(a => a.Management.CreationDate, Model.Management.CreationDate)
                @Html.HiddenFor(a => a.Management.Id, Model.Management.Id)
                <label asp-for="Management.Id" class="control-label"></label>
                <input value="@Model.Management.Id" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Management.Name" class="control-label"></label>
                <input asp-for="Management.Name" class="form-control" />
                <span asp-validation-for="Management.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select id="drpEmpList" class="form-control"
                        asp-for="Management.Governorate.Id"
                        asp-items="@(new SelectList(Model.Governorates, "Id", "Name"))">
                    <option value="">--Select--</option>
                </select>
                <input type="hidden" asp-for="Management.Governorate.Id" />

                @*<label asp-for="Management.Governorate.Id" class="control-label"></label>
            <input asp-for="Management.Governorate.Id" class="form-control" />
            <span asp-validation-for="Management.Governorate.Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  