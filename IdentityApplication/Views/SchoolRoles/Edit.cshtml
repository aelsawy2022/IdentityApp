@model IdentityApplication.Models.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Role @Model.Role.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Role.School.Id" value="@Model.School.Id" />

            <div class="form-group">
                @Html.HiddenFor(a => a.Role.Id, Model.Role.Id)
                <label asp-for="Role.Id" class="control-label"></label>
                <input value="@Model.Role.Id" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Role.Name" class="control-label"></label>
                <input asp-for="Role.Name" class="form-control" />
                <span asp-validation-for="Role.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check form-switch">
                    <input type="checkbox" asp-for="Role.Active" class="form-check-input" />
                    <label asp-for="Role.Active" class="form-check-label"></label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="School.Name" class="control-label">School</label>
                <input asp-for="School.Name" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-route-schoolId="@Model.School.Id">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  