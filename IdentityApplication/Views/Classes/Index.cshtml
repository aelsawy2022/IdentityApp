@model IEnumerable<IdentityApplication.Data.Entities.Class>
@{
    ViewData["Title"] = "Index";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="text-center">
    <h1 class="display-4">Classes</h1>
    <p>You can manage classes from this screen.</p>
</div>

<div class="row">
    <div class="col-12">
        &nbsp;
    </div>
</div>

<a asp-action="Create">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Position</td>
            <td>Grade</td>
            <td>Creation Date</td>
            <td>Active</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var _class in Model)
        {
        <tr>
            <td>@_class.Id</td>
            <td>@_class.Name</td>
            <td>@_class.Position</td>
            <td>@_class.Grade?.Name</td>
            <td>@_class.CreationDate.ToString("MM/dd/yyyy")</td>
            <td>@_class.Active</td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-controller="Classes"
                   asp-route-classId="@_class.Id">Edit</a>

                <a class="btn btn-danger" asp-action="Delete" asp-controller="Classes"
                   asp-route-classId="@_class.Id" 
                   onclick="return confirm('Are you sure you want to delete @_class.Name?')">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table> 